# Environment Variables
# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=urjasync_user
DB_PASSWORD=your_password
DB_NAME=urjasync_db
DATABASE_URL=postgresql://urjasync_user:your_password@localhost:5432/urjasync_db

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production_minimum_32_characters
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password
FROM_EMAIL=noreply@urjasync.com
FROM_NAME=UrjaSync

# OTP Configuration
OTP_EXPIRY_MINUTES=10
MAX_OTP_ATTEMPTS=3

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Frontend URL
NEXT_PUBLIC_FRONTEND_URL=http://localhost:3000

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password_here

# MQTT Configuration
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_USERNAME=urjasync_mqtt
MQTT_PASSWORD=your_mqtt_password_here

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=urjasync-producer
KAFKA_TOPIC_PREFIX=urjasync

# WebSocket Configuration
WEBSOCKET_PORT=3001
WEBSOCKET_HOST=localhost

# Payment Gateway Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
RAZORPAY_KEY_ID=rzp_test_your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# SMS Service Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Push Notification Configuration
FCM_SERVER_KEY=your_fcm_server_key_here
FCM_SENDER_ID=your_fcm_sender_id_here

# Analytics & Monitoring
SENTRY_DSN=your_sentry_dsn_here
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Security
CORS_ORIGIN=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,https://localhost:3000

# Performance
NODE_ENV=development
PORT=3000
API_TIMEOUT=30000

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=urjasync-backups
BACKUP_S3_REGION=us-east-1

# Monitoring & Health Checks
HEALTH_CHECK_INTERVAL=30000
METRICS_PORT=9090

# Development Only
NODE_DEV=true
DEBUG=true
